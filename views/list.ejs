<%- include("header") -%>

    <nav class="navbar navbar-default">
        <div class="container">
        <div class="navbar-header">
            <p class="navbar-brand">TODO LIST</p>
        </div>
            <ul class="nav navbar-nav navbar-right">
            <li><a href="/">HOME</a></li>
            <% lists.forEach(function(list){%>
                <li><a href="/<%= list %>"><%= list %></a></li>
            <% }) %>
            </ul>
        </div>
    </nav>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">

        <% items.forEach(function(item){%>
        <form action="/delete" method="POST" style="margin-left: 5px">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= item.item%>" onChange="this.form.submit()">
                <p><%= item.item %></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle%>"></input>
        </form>
            <% }) %>

        <form action="/" method="post">
            <input type="text" name="newItem" placeholder="Task To Do" autocomplete="off" autofocus>
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
    
    <div class="box">
        <form action="/createlist" method="GET">
            <button class="switch inline" type="submit">Create List</button>
        </form>
    
        <form action="/deletelist" method="POST">
            <input type="hidden" name="listName" value="<%= listTitle%>"></input>
            <button class="switch" type="submit" id="deletebutton">Delete List</button>
        </form>
    </div>

<%- include("footer") -%>