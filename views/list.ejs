<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">

        <% items.forEach(function(item){%>
        <form action="/delete<%= postroute %>" method="POST" style="margin-left: 5px">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= item.item%>" onChange="this.form.submit()">
                <p><%= item.item %></p>
            </div>
        </form>
            <% }) %>

        <form action=<%= postroute%> method="post">
            <input type="text" name="newItem" placeholder="Task To Do" autocomplete="off" autofocus>
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>
    
    <form action=<%= switchroute %> method="GET">
        <button class="switch" type="submit" name="switchList">Switch List</button>
    </form>

<%- include("footer") -%>