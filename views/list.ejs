<%- include("header") -%>

    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <p class="navbar-brand">TODO-LIST</p>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/">HOME</a></li>
            <% lists.forEach(function(list) { %>
                <li><a href="/<%= list%>" ><%= list %></a></li>
            <% }); %>
            </ul>
        </div>
    </nav>
    
    <div class="box" id="heading">
            <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% items.forEach(function(item) {%>
        <form action="/delete" method="POST">
            <div class="item">
                <input type="checkbox" name="checkbox"  value="<%= item%>" onChange="this.form.submit()">
                <p><%= item %></p>
            </div>
            <input type="hidden" name="list" value="<%= listTitle %>">
        </form>
        <% }); %>

        <form action="/" method="POST">
            <input type="text" name="newItem" placeholder="Task To Do" autocomplete="off" autofocus>
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>

    <div>
        <form action="/createlist" method="GET">
            <button class="switch" type="submit">Create List</button>
        </form>
        <form action="/deleteList" method="POST">
            <input type="hidden" name="list" value="<%= listTitle %>">
            <button class="switch" type="submit">Delete List</button>
        </form>
    </div>

<%- include("footer") -%>